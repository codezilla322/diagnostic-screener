{
    "compilerOptions": {
      "target": "ES6",                       
      "module": "commonjs",                  
      "strict": true,                        
      "esModuleInterop": true,               
      "forceConsistentCasingInFileNames": true, 
      "outDir": "./dist",                    
      "rootDir": "./src",                    
      "resolveJsonModule": true,             
      "skipLibCheck": true,                  
      "sourceMap": true                      
    },
    "include": ["src/**/*.ts"],              
    "exclude": ["node_modules", "dist"]      
  }